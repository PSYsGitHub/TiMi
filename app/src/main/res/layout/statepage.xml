<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/b"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="정보" />
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/arrow" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/b"
            android:textSize="15sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/introduceTextView"
            android:layout_width="368dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/a"
            android:textSize="15sp"
            android:textColor="#000000"
            android:lineSpacingExtra="5dp"/>

        <RelativeLayout
            android:id="@+id/detail"
            android:layout_width="340dp"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="275dp"
            android:background="@drawable/edittext">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/a"
                android:lineSpacingExtra="14dp"
                android:text="마감일 : \n가능 시간 : \n모집인원 : "
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/endTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/a"
                android:lineSpacingExtra="10dp"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/a"
                android:lineSpacingExtra="10dp"
                android:textColor="#000000"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/peopleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="68dp"
                android:fontFamily="@font/a"
                android:lineSpacingExtra="10dp"
                android:textColor="#000000"
                android:textSize="15sp" />

        </RelativeLayout>
    </RelativeLayout>

    <!--연습-->




    <View
        android:layout_width="450dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="690dp"
        android:background="@android:color/darker_gray" />
    <ImageView
        android:id="@+id/home"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="695dp"
        android:alpha="0.5"
        android:src="@drawable/home" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="733dp"
        android:fontFamily="@font/a"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:text="홈" />

    <ImageView
        android:id="@+id/full"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="695dp"
        android:alpha="0.5"
        android:src="@drawable/full" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="733dp"
        android:fontFamily="@font/a"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:text="전체 보기" />

    <ImageView
        android:id="@+id/message"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="695dp"
        android:alpha="0.5"
        android:src="@drawable/message" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="229dp"
        android:layout_marginTop="733dp"
        android:fontFamily="@font/a"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:text="채팅" />

    <ImageView
        android:id="@+id/mypage"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="695dp"
        android:src="@drawable/mypagecolor" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="312dp"
        android:layout_marginTop="733dp"
        android:fontFamily="@font/b"
        android:textSize="11sp"
        android:textColor="@android:color/darker_gray"
        android:text="MY" />

</RelativeLayout>